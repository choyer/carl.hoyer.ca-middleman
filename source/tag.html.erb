---
layout: global
pageable: false
per_page: 12
homelink: true
---
<div id="archives">
  <h1>Articles tagged '<%= tagname %>'</h1>

  <% if paginate %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <ul>
    <% page_articles.each_with_index do |article, i| %>
    <li>
      <%= link_to article.title, article %>
      <span class="postdate"><%= article.date.strftime('%B %e') %></span>
      <span class="posttag-wrapper"><span class="posttag-bookend">{</span> <span class="posttags"><%= article.tags.join(', ') %></span> <span class="posttag-bookend">}</span></span>
    </li>
    <% end %>
  </ul>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>
