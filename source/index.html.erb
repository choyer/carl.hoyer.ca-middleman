<% article = blog.articles[0] %>
<% disqus_identifier = 'http://carl.hoyer.ca' + article.url %>
<article class="post">
    <header>
        <time class="postdate" datetime="<%= article.date.strftime('%Y-%m-%d') %>" pubdate><%= article.date.strftime('%B %e, %Y') %></time>
        <h1 class="mega"><%= article.title %></h1>
    </header>
    <%= article.body %>

    <p><h4><a href="<%= article.url %>#disqus_thread" data-disqus-identifier="<%= disqus_identifier %>">View Comments</a></h4></p>
    <script type="text/javascript">
    var disqus_shortname = 'carl-hoyer';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = '//' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
    </script>

    <footer>
        <div class="meta center">
            <span class="posttag-bookend">{</span> <span class="posttags"><%= data.page.tags %></span> <span class="posttag-bookend">}</span> <sup>Meta</sup>
        </div>
        <div class="porpema"><%= image_tag "haeckel_porpema.png", :alt => "End of Article", :class => "center" %></div>
    </footer>

</article>

